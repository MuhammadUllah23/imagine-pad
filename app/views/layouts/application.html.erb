<!DOCTYPE html>
<html>
  <head>
    <title>ImaginePad</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  <link rel="stylesheet" href="/stylesheets/main.css" />
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <br>

  
  

  <div class="wrapper">
  <% if logged_in? %>
  <h4><%=link_to current_user.username, user_path(current_user) %></h4>
  <%= button_to "logout", '/logout'%>
  <%= link_to 'Create Concept', new_concept_path %>
  <%= link_to 'Create Genre', new_genre_path %>
<% else %>
  <%= link_to 'Sign Up', signup_path%>
  <%= link_to 'Log In', login_path%>
  <%= button_to 'Log in with Facebook', '/auth/facebook', method: :post %>
<% end %>
  <%= link_to "Concepts", concepts_path%>
  <%= link_to "Genres", genres_path%>
  <%= link_to "Home Page", root_path%>
    <%= yield %>

  </div>
  </body>
</html>
