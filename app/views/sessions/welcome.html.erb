<h1>Imagine Pad</h1>

<% if session[:id] %>
  <h1><%= @user.username %></h1>
  <h2>Email: <%= @user.email %></h2> 
  <br><br>
  <%= button_to "logout", '/logout'%>
<% else %>
  <%= link_to 'Sign Up', signup_path%>
  <%= link_to 'Log In', login_path%>
  <%= button_to "Log in with Facebook", '/auth/facebook'%>
   
<% end %> 