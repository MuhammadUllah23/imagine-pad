<h1>Login</h1>

<%= form_for(:user, url: login_path) do |f|%>
<p>Please login with your email or username</p> <br>
<%= f.label :email %>
<%= f.text_field :email %>
<br>
<%= f.label :username %>
<%= f.text_field :username %>
<br><br>
<%= f.label :password %>
<%= f.password_field :password %>

<%= f.submit "Login"%>
<%end%>
