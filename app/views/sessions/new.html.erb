<h1>Login</h1>

<% if @user%>
<%= render partial: "layouts/error", locals: { object: @user}%>
<% end %>

<%= form_for(:user, url: login_path) do |f|%>
<p>Please login with your email or username</p> <br>
<%= f.label :email %>
<%= f.text_field :email %>
<br><br>
<%= f.label :password %>
<%= f.password_field :password %>

<%= f.submit "Login"%>
<%end%>
